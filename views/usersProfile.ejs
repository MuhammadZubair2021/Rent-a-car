 
    
    <!-- ***** Header Area Start ***** -->
    <%-include('./partials/header.ejs') %>
    <!-- ***** Header Area End ***** -->

<div class="row justify-content-center" style="margin-top: 90px;">
<div class="col-md-6">
<div class="card">
    <div class="card-header">
        <%=user.firstName + ' ' + user.lastName %> Profile
      </div>
    <article class="photo mt-4 mb-4" style='text-align:center;'>
		<% if(user.image=='null'){ %>        	
        	<img src="/public/images/userAvatar.png" alt="" width="200px" height="200px" class="rounded-pill">    
		<% }else{ %>
        	<img src="/<%=user.image%>" alt="" width="200px" height="200px" class="rounded-pill">    
		<%}%>

    </article>  
    <article class="card-body">  
<form>
	<div class="form-row">
		<div class="col form-group">
			<label>First name </label>   
		  	<input type="text" name="firstName" class="form-control" disabled value="<%=user.firstName%>">
		</div> <!-- form-group end.// -->
		<div class="col form-group">
			<label>Last name</label>
		  	<input type="text" name="lastName"  class="form-control" disabled value="<%=user.lastName%>">
		</div> <!-- form-group end.// -->
	</div> <!-- form-row end.// -->
	<div class="form-group">
		<label>Email address</label>
		<input type="email" name="email" class="form-control" disabled value="<%=user.email%>">		
	</div> <!-- form-group end.// -->
	<div class="form-group">
			<label class="form-check form-check-inline"> Gender 
                <%if(user.gender=='male' || user.gender=='Male'){%>
                    <span class="form-check-label"> Male </span>
                <%}else{%>
                    <span class="form-check-label"> Female</span>
                <%}%>
		    </label>		
	</div> <!-- form-group end.// -->
	<div class="form-row">
		<div class="form-group col-md-6">
		  <label>Address</label>
		  <input type="text"  name="address" class="form-control" disabled value="<%=user.address%>">
		</div> <!-- form-group end.// -->
		<div class="form-group col-md-6">
		  <label>Country</label>
		  <input type="text" name="address" class="form-control" disabled value="<%=user.country%>">
		</div> <!-- form-group end.// -->
	</div> <!-- form-row.// -->	
  <div class="form-row">
		<div class="col form-group">
			<label>Profile Image</label>   
		  	<input type="text" id="image" name="image" class="form-control" disabled value="At the top of details">
		</div> <!-- form-group end.// -->
		<div class="col form-group">
			<label>Contact Number</label>
		  	<input type="number" id="contactNumber" name="contactNumber" class="form-control" disabled value="<%=user.contactNumber%>">
		</div>    
	</div> <!-- form-row end.// --> 
  
  <div class="form-group">
		<label>Profession</label>
	    <input class="form-control" id="profession" name="profession" type="text" disabled value="<%=user.profession%>">     
	</div> <!-- form-group end.// -->
  <div class="form-row">
		<div class="col form-group">
			<label>Experience</label>   
            <input type="text" id="experience" name="experience" class="form-control" disabled value="<%=user.experience%>">
		</div> <!-- form-group end.// -->
		<div class="col form-group">
			<label>Languages</label>
		  	<input type="text" id="languages" name="languages" required class="form-control" disabled value="<%=user.languages%>">
		</div>    
	</div> <!-- form-row end.// -->

  <div class="form-group">
		<label>Work links</label>
	    <p>Project 1 : <%=user.project1 %></p>      
	    <p>Project 2 : <%=user.project2 %></p>      
	    <p>Project 3 : <%=user.project3 %></p>      
	</div> <!-- form-group end.// -->
    <%if(currentUser && currentUser.fullName === user.fullName){%>
    <div class="form-group">
        <a href="/userProfile/<%=user._id%>/updateUser" class="btn btn-primary btn-block" style="color: antiquewhite;"> Edit Profile  </a>
    </div> <!-- form-group// -->
    <%}%>        
</form>
</article> <!-- card-body end .// -->
</div> <!-- card.// -->
</div> <!-- col.//-->

</div> <!-- row.//-->

</div> 
<!--container end.//-->

    <!-- ***** Footer below ***** -->
    <%- include('./partials/footer.ejs') %>